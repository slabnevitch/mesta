extends _misc/main

block title
	| Статьи

block content
	.page-articles
		section.place
			.container
				h1 Статьи
				.page-articles__top
					a(href="#").article-card.articles-card--horizontal
						.article-card__img._fit
								img._fit-img(src="img/articles-page/big.jpg" alt="alt")
						
						.article-card__text
							.article-card__title Лучшие пляжи Крыма
							.article-card__descr
								.article-card__paragraph Крымский полуостров привлекателен круглый год. Зимой сюда приезжают, посмотреть природные достопримечательности, а летом провести отпуск. Планируя Крымский полуостров привлекателен круглый год. Зимой сюда приезжают, посмотреть природные достопримечательности, а летом провести отпуск. Планируя ...
								.article-preview-date 28 Декабря 2021
									.article-preview-time 3 мин

				.articles-cards
					a(href="#" class="article-card article-card--very-long-descr")
						.article-card__img._fit
							img._fit-img(src="img/articles-page/cards/3.jpg" alt="alt")

						.article-card__text
							if i%2 == 0 
								.article-card__title Обзор бесплатных достопримечательностей Москвы. Топ 10
								.article-card__descr
									.article-card__paragraph Крымский полуостров привлекателен круглый год. Зимой сюда приезжаю
							else
								.article-card__title Топ пляжей Краснодарского края
								.article-card__descr
									.article-card__paragraph Крымский полуостров привлекателен круглый год. Зимой сюда приезжаю круглый год. Зимой сюда приезжаю Крымский полуостров привлекателен круглый год. Зимой сюда приезжаю круглый год. Зимой сюда приезжаю
							.article-preview-date 28 Декабря 2021
								.article-preview-time 3 мин
					- for (var n=0; n < 3; n++)
						- for (var i=0; i < 3; i++)
							a(href="#" class=i%2 == 0 ? 'article-card article-card--long-title' : 'article-card article-card--long-descr')
								.article-card__img._fit
									img._fit-img(src="img/articles-page/cards/" + (i+1) + ".jpg" alt="alt")

								.article-card__text
									if i%2 == 0 
										.article-card__title Обзор бесплатных достопримечательностей Москвы. Топ 10
										.article-card__descr
											.article-card__paragraph Крымский полуостров привлекателен круглый год. Зимой сюда приезжаю
									else
										.article-card__title Топ пляжей Краснодарского края
										.article-card__descr
											.article-card__paragraph Крымский полуостров привлекателен круглый год. Зимой сюда приезжаю круглый год. Зимой сюда приезжаю ...
									.article-preview-date 28 Декабря 2021
										.article-preview-time 3 мин

				.loading_items
					span.icon-loading
					| Загрузка
				
